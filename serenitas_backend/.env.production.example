# Production Environment Variables - Clínica Serenitas Backend
# Copy this file to .env.production and fill in the actual values

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
PORT=5000
APP_VERSION=1.0.0

# ============================================
# Supabase Configuration
# ============================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# ============================================
# JWT Configuration
# ============================================
# Generate a strong 256-bit secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-256-bit-jwt-secret-here
JWT_EXPIRES_IN=7d

# ============================================
# Encryption Configuration (LGPD Compliance)
# ============================================
# Generate encryption key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-256-bit-encryption-key-here

# ============================================
# LGPD Compliance
# ============================================
DPO_NAME=Data Protection Officer
DPO_EMAIL=dpo@clinicaserenitas.com.br
DPO_PHONE=+55 11 XXXX-XXXX
DPO_ADDRESS=Endereço da Clínica Serenitas

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://serenitas.app,https://www.serenitas.app

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ============================================
# Email Configuration (Optional - for notifications)
# ============================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@clinicaserenitas.com.br
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=Clínica Serenitas <noreply@clinicaserenitas.com.br>

# ============================================
# Monitoring (Optional - Sentry)
# ============================================
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=production

# ============================================
# File Upload Configuration
# ============================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png

# ============================================
# Session Configuration
# ============================================
SESSION_TIMEOUT_MINUTES=30

# ============================================
# Data Retention (LGPD)
# ============================================
INACTIVE_ACCOUNT_RETENTION_YEARS=2
MEDICAL_RECORD_RETENTION_YEARS=20
AUDIT_LOG_RETENTION_YEARS=5
