# Database Configuration
# MongoDB (for migration only - will be replaced by Supabase)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/serenitas?retryWrites=true&w=majority

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,http://localhost:19006,exp://localhost:19000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Security
BCRYPT_ROUNDS=12

# LGPD Compliance - Data Encryption (REQUIRED)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-256-bit-encryption-key-in-hex-64-characters
PSEUDONYM_SALT=your-random-salt-for-pseudonymization

# LGPD Compliance - DPO Information (REQUIRED)
DPO_NAME=Nome do Encarregado de Dados
DPO_EMAIL=dpo@clinicaserenitas.com.br
DPO_PHONE=+55 11 1234-5678
DPO_ADDRESS=Endereço da Clínica Serenitas

# Logging
LOG_LEVEL=info

# Optional: Email Configuration (for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Optional: File Upload (for future features)
# MAX_FILE_SIZE=10485760
# UPLOAD_PATH=./uploads 